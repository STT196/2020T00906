<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fixed Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1877F2"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/rpt99ygcwv9d"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="19dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:shapeAppearanceOverlay="@style/cr50" />

        <LinearLayout
            android:id="@+id/rffnugkehevc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/raeqtcubfuc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:layout_weight="1"
                android:background="@drawable/sffffffsw2cr10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="13dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/r79zvnlow6g5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher"
                    app:shapeAppearanceOverlay="@style/cr50" />

                <EditText
                    android:id="@+id/r0bnjazphpr3t"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Search"
                    android:inputType="text"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/r32npsf02pxr"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/avatar"
                app:shapeAppearanceOverlay="@style/cr50" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/robuwokpm41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="26dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rvq5pvlchbq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="#1877F2"
                android:orientation="vertical"
                android:paddingVertical="23dp">

                <TextView
                    android:id="@+id/rll33g9kc7iq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="27dp"
                    android:text="Academic"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rxgmm5yc0mda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="#1877F2"
                android:orientation="vertical"
                android:paddingVertical="23dp">

                <TextView
                    android:id="@+id/rhnqcin792j"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="37dp"
                    android:text="Sports"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rn429kxk3u2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#1877F2"
                android:orientation="vertical"
                android:paddingVertical="23dp">

                <TextView
                    android:id="@+id/rqm5ftrgce3g"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="9dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Events"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Card Section -->
    <ScrollView
        android:id="@+id/rjpy665ettt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="70dp">

            <!-- Your card content goes here (same as before) -->
            <LinearLayout
                android:id="@+id/ras76phha59g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">
                <!-- Card 1 -->
                <!-- Card 2 -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rkfk8y2vop5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cr15bffffff"
                android:elevation="15dp"
                android:orientation="horizontal"
                android:padding="13dp">
                <!-- Card content -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rzwhu7mtwou8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/cr15bffffff"
                android:elevation="15dp"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="59dp">
                <!-- Card content -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>